datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") 
}

generator client {
  provider = "prisma-client-js"
}

enum InvestmentExperience {
  NONE
  BEGINNER
  INTERMEDIATE
  EXPERIENCED
}

enum GoalType {
  RETIREMENT
  LONG_TERM
  SHORT_TERM
}

enum Tolerance {
  LOW
  MEDIUM
  HIGH
}

model User {
  id                     Int           @id @default(autoincrement())
  createdAt              DateTime      @default(now())
  email                  String        @unique
  username               String        @unique
  password               String
  refreshToken           String?       @unique
  sessions               Session[]
  portfolios             Portfolio[]
  investmentPrefs        InvestmentPrefs?
}

model Session {
  id                     Int              @id @default(autoincrement())
  createdAt              DateTime         @default(now())
  userId                 Int
  user                   User             @relation(fields: [userId], references: [id])
  portfolios             Portfolio[]
}

model Portfolio {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  userId        Int
  user          User     @relation(fields: [userId], references: [id])
  sessionId     Int
  session       Session  @relation(fields: [sessionId], references: [id])
  portfolioJSON Json
}

model InvestmentPrefs {
  id                     Int       @id @default(autoincrement())
  createdAt               DateTime  @default(now())
  portfolio_style        String
  age                    Int
  location               String
  occupation             String
  investment_experience  InvestmentExperience
  goal_type              GoalType
  target_amount          Float
  target_years           Int
  risk_tolerance         Tolerance
  volatility_tolerance   Tolerance
  initial_investment     Float
  liquidity_needs_percentage Float
  preferred_sectors      String[]
  excluded_sectors       String[]
  userId                 Int       @unique
  user                   User      @relation(fields: [userId], references: [id])
}

